<UserControl x:Class="AHIFventory.ExpensesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AHIFventory"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:AHIFventory"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:OrderViewModel/>
    </UserControl.DataContext>
    <Border Background="White" CornerRadius="10" BorderBrush="Black" BorderThickness="1">
        <Viewbox>
            <StackPanel Margin="10">
                <TextBlock Text="Total Revenue:" FontWeight="Bold" Background="LightGreen"/>
                <TextBlock Text="{Binding Path=TotalRevenue, StringFormat=C, ConverterCulture=de-DE}" Margin="5"/>

                <TextBlock Text="Total Expenses:" FontWeight="Bold" Background="red"/>
                <TextBlock Text="{Binding Path=TotalExpenses, StringFormat=C, ConverterCulture=de-DE}" Margin="5"/>

                <TextBlock Text="Total Profit:" FontWeight="Bold" Background="LightGray"/>
                <TextBlock Text="{Binding Path=TotalProfit, StringFormat=C, ConverterCulture=de-DE}" Margin="5"/>
            </StackPanel>
        </Viewbox>
        
    </Border>
</UserControl>
